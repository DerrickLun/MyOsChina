<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--主背景色-->
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="WelcomeTheme" parent="AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- 列表用户头像的样式 -->
    <style name="UserPortraitStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="project_list_someinfo">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:textColor">@color/gray</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="project_detail_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <!--<item name="android:background">@drawable/bg_style_blue</item>-->
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="project_detail_btn_img">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">5dip</item>
    </style>

    <style name="project_detail_btn_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:layout_marginRight">5dip</item>
        <item name="android:layout_marginBottom">1dip</item>
    </style>

    <style name="line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/gray_line</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <!--蓝色主题-->
    <style name="BlueTheme" parent="AppTheme">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/dark_blue</item>
        <item name="colorAccent">@color/accent_blue</item>
    </style>

    <!--蓝灰色主题-->
    <style name="BlueGreyTheme" parent="AppTheme">
        <item name="colorPrimary">@color/blue_grey</item>
        <item name="colorPrimaryDark">@color/dark_blue_grey</item>
        <item name="colorAccent">@color/accent_blue_grey</item>
    </style>

    <!--红色主题-->
    <style name="RedTheme" parent="AppTheme">
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/dark_red</item>
        <item name="colorAccent">@color/accent_red</item>
    </style>

    <!--棕色主题-->
    <style name="BrownTheme" parent="AppTheme">
        <item name="colorPrimary">@color/brown</item>
        <item name="colorPrimaryDark">@color/dark_brown</item>
        <item name="colorAccent">@color/accent_brown</item>
    </style>

    <!--黄色主题-->
    <style name="YellowTheme" parent="AppTheme">
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/dark_yellow</item>
        <item name="colorAccent">@color/accent_yellow</item>
    </style>

    <!--紫色主题-->
    <style name="DeepPurpleTheme" parent="AppTheme">
        <item name="colorPrimary">@color/deep_purple</item>
        <item name="colorPrimaryDark">@color/dark_deep_purple</item>
        <item name="colorAccent">@color/accent_deep_purple</item>
    </style>

    <!--粉红色主题-->
    <style name="PinkTheme" parent="AppTheme">
        <item name="colorPrimary">@color/pink</item>
        <item name="colorPrimaryDark">@color/dark_pink</item>
        <item name="colorAccent">@color/accent_pink</item>
    </style>

    <!--绿色主题-->
    <style name="GreenTheme" parent="AppTheme">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/dark_green</item>
        <item name="colorAccent">@color/accent_green</item>
    </style>

    <style name="text_setting">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>
