<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/id_ll_mine"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="200dp" android:background="?attr/colorPrimary">
    <com.wuxianedu.oschina.widget.RoundImageView android:id="@+id/iv_head"
        android:layout_width="80dp" android:layout_marginTop="50dp"
        android:layout_height="80dp" android:layout_gravity="center_horizontal"
        android:src="@mipmap/mini_avatar"/>
    <TextView android:id="@+id/tv_head_username" android:layout_marginTop="20dp"
        android:layout_width="wrap_content" android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" android:text="@string/click_login"
        android:textColor="@android:color/white" android:textSize="16sp"/>
</LinearLayout>