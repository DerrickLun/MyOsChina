<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_margin="7dp"
    android:id="@+id/id_card_view" style="@style/layout_match"
    app:cardCornerRadius="5dp" android:elevation="3dp">

    <LinearLayout style="@style/layout_match_wrap" android:orientation="vertical"
        android:padding="13dp">
        <TextView android:id="@+id/id_name" style="@style/layout_wrap"
            android:textColor="?attr/colorPrimary" android:textSize="20sp"/>

        <TextView android:id="@+id/id_num" style="@style/layout_wrap"
            android:textColor="@color/gray" android:layout_marginTop="5dp"/>
    </LinearLayout>

</android.support.v7.widget.CardView>

